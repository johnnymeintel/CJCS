<group name="local,windows,authentication,attack">
  <!-- Rule 100001: Basic failed logon counter -->
  <rule id="100001" level="10" frequency="3" timeframe="60">
    <if_matched_sid>60122</if_matched_sid>
    <description>Multiple failed logons detected</description>
  </rule>

  <!-- Rule 100002: Password spray detection -->
  <rule id="100002" level="12" frequency="5" timeframe="120">
    <if_matched_sid>60122</if_matched_sid>
    <different_field>win.eventdata.targetUserName</different_field>
    <description>Password spray detected - multiple accounts targeted</description>
    <mitre>
      <id>T1110.003</id>
    </mitre>
  </rule>
</group>
